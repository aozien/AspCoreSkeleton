@model IEnumerable<AspCoreSkeletonZien.Models.Entities.Member>

@{
    ViewData["Title"] = "Members List";
}

<style>

    .member-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    } 



</style>


<h3>Members</h3>

<div class="" style="display:block;width:100%;min-height:60px;">
    <a class="btn btn-dark " style="float:right" asp-action="Add">Create New</a>
</div>
@if (Model.Count() == 0) {

    <span class="text-info"> There's no members currently, Add members so they appear here</span>
} else { 
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Country)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfileImage)
            </th>

        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Country.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <div class="img-container">
                    <img class="rounded-circle member-img" src="../Images/@Html.DisplayFor(modelItem => item.UserProfileImage)" />
                </div>
            </td>
            

        </tr>
}
    </tbody>
</table>
}